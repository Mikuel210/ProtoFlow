{
  "name": "protoflow-client",
  "version": "0.0.1",
  "description": "A client for interacting with a ProtoFlow server",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.protoflow-client",
    "productName": "ProtoFlow",
    "files": [
      "main.js",
      "preload.js",
      "public/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    }
  }
}
